--exclude Pods, Package.swift

--binarygrouping none 
--decimalgrouping none 
--hexgrouping none 
--ifdef no-indent 
--octalgrouping none 
--patternlet inline 
--self init-only 
--semicolons never
--wraparguments before-first
--commas inline
--header strip

# makes swiftlint happy. 120 matches what swiftlint is configured for
--maxwidth 120 

--disable unusedArguments

--enable isEmpty
