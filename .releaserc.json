{
    "tagFormat": "${version}",
    "branches": [
        "main",
        { "name": "beta", "prerelease": true },
        { "name": "alpha", "prerelease": true }
    ],
    "plugins": [
        ["@semantic-release/commit-analyzer", {
            "preset": "conventionalcommits"
        }],
        ["@semantic-release/release-notes-generator", {
            "preset": "conventionalcommits"
        }],
        ["@semantic-release/exec", {
            "verifyReleaseCmd": "./scripts/update-version.sh ${nextRelease.version} && ./scripts/update-version-cocoapods.sh ${nextRelease.version}"
        }],
        ["@semantic-release/changelog", {
            "changelogFile": "CHANGELOG.md"
        }],
        ["@semantic-release/git", {
            "assets": ["CHANGELOG.md", "Sources/Common/Version.swift", "*.podspec"],
            "message": "chore: prepare for ${nextRelease.version}\n\n${nextRelease.notes}"
        }],
        ["@semantic-release/github", {
            "labels": false,
            "successComment": false,
            "failTitle": false
        }]
    ]
}